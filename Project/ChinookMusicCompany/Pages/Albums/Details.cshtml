@page
@model ChinookMusicCompany.Pages.Albums.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.Artist.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.Tracks)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Track Name</th>
                    <th>Unit Price</th>
                </tr>
                @foreach (var item in Model.Album.Tracks)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitPrice)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Album.AlbumID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
